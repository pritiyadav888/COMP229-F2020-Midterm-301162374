<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
   <div class="row">
       <div class="col-md-offset-3 col-md-10">
           <h1><%= title %></h1>
           <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/books-list/add" class="btn btn primary" role = "button">
                <i class="fas fa-plus-circle"></i> Add a Book</a>
            <% } %>
           <br>
           <p><button onclick="sortTable()">Sort</button></p>
           <table id = "myTable" class="table table-bordered table-striped table-hover">
               <!-- header row -->
               <tr>
                <% if(typeof displayName == 'string' && displayName) { %>
                      <th class="text-center">Title</th>
                      <th class="text-center">Author</th>
                      <th class="text-center">Price</th>
                      <th class="text-center">Published</th>
                      <th class="text-center">Overview</th>
                      <!-- <th class="text-center">Edit</th>
                      <th class="text-center">Delete</th> -->
                      <th class="text-center"></th>
                      <th class="text-center"></th>

                   <% } else { %>

                      <th class="text-center">Title</th>
                      <th class="text-center">Author</th>
                      <th class="text-center">Price</th>
                      <th class="text-center">Published</th>
                      <th class="text-center">Overview</th>

                   <% } %>
               </tr>

               <!-- Repeatable Template Row -->
               <% for(let count = 0; count < BookList.length; count++){ %>
                 <tr>
                    <% if(typeof displayName == 'string' && displayName) { %> 
                        <td class="text-center"><%= BookList[count].title %></td>
                        <td class="text-center"><%= BookList[count].author %></td>
                        <td class="text-center"><%= BookList[count].price %></td>
                        <td class="text-center"><%= BookList[count].published %></td>
                        <td class="text-center"><%= BookList[count].overview %></td>
                        <td class="text-center">
                          <a href="/books-list/edit/<%- BookList[count]._id %>" class="btn btn-primary">
                            <i class="fas fa-pencil alt"> Update</i></a>

                        </td>
                        <td class="text-center">
                          <a href="/books-list/delete/<%- BookList[count]._id %>" class="btn btn-danger">
                            <i class="fas fa-trash alt"> Delete</i></a>
                        </td>
                  <% } else { %>
                        <td class="text-center"><%= BookList[count].title %></td>
                        <td class="text-center"><%= BookList[count].author %></td>
                        <td class="text-center"><%= BookList[count].price %></td>
                        <td class="text-center"><%= BookList[count].published %></td>
                        <td class="text-center"><%= BookList[count].overview %></td>
                  <% } %>   

                 </tr>
               <% } %>

       </div>
   </div>
   
  </main>
<%- include ../partials/sort.ejs %>  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  

